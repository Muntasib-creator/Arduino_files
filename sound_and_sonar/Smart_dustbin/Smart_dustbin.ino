void setup() {
  pinMode(tp1, OUTPUT);
  pinMode(ep1, INPUT);
  
  pinMode(tp2, OUTPUT);
  pinMode(ep2, INPUT);

  pinMode(11, OUTPUT);  // red
  pinMode(12, OUTPUT);  // yellow
  pinMode(13, OUTPUT);  // green
  
  myservo.attach(9);
  Serial.begin(9600);
}

void loop() {
  digitalWrite(tp1, LOW);
  delayMicroseconds(5);
  digitalWrite(tp1, HIGH);
  delayMicroseconds(10);
  digitalWrite(tp1, LOW);
  duration1 = pulseIn(ep1, HIGH);
  distance1 = duration1 * 0.017;
  if (distance1 <= 20) {
      myservo.write(75);
      start_song = true;
      dustbin_opened = true;
  }

  else {
      myservo.write(0); 
      start_song = false;  
      if(dustbin_opened){
        dustbin_opened = false;
        song2();
      } 
  }
  song1();
  

  digitalWrite(tp2, LOW);
  delayMicroseconds(5);
  digitalWrite(tp2, HIGH);
  delayMicroseconds(10);
  digitalWrite(tp2, LOW);
  duration2 = pulseIn(ep2, HIGH);
  distance2 = duration2 * 0.017;

  //Serial.println(distance2);

  if (distance2 <= 4.2) {
    digitalWrite(11, HIGH);
    digitalWrite(12, LOW);
    digitalWrite(13, LOW);

    currentTime = millis();

    if (currentTime-previousTime >= 2000) {
      
      for (j = 1; j <= 100; j = j+1) {
        digitalWrite(buzzer, HIGH);
        delay(1);
        digitalWrite(buzzer, LOW);
        delay(1);
      }
      for (j = 1; j <= 100; j = j+1) {
        digitalWrite(buzzer, HIGH);
        delay(2);
        digitalWrite(buzzer, LOW);
        delay(2);
      }

      percent_full = (((21.0-distance2)/21.0)*100.0); 

      Serial.print(percent_full, 2);
      Serial.println("% Full!!!");

      previousTime = currentTime;
    }
  }
  else if (distance2 <= 12.4) {
    digitalWrite(11, LOW);
    digitalWrite(12, HIGH);
    digitalWrite(13, LOW);

    currentTime = millis();

    if (currentTime-previousTime >= 10000) {
      
      int i = 0;
      while (i < 2) {
        tone(buzzer, 450);
        delay(200);
        noTone(buzzer);
        delay(200);
        i++;
      }

      percent_full = (((21.0-distance2)/21.0)*100.0); 

      Serial.print(percent_full, 2);
      Serial.println("% Full!");

      previousTime = currentTime;
    }

  }
  else {
    digitalWrite(11, LOW);
    digitalWrite(12, LOW);
    digitalWrite(13, HIGH);
  }
